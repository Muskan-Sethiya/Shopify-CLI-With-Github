{% schema %}
  {
    "name": "Feature",
    "settings": [
      {
        "type": "color",
        "id": "bg-color",
        "label": "Background",
        "default":"#000"
      }
    ],
    "blocks": [
      {
        "name":"Feature",
        "type": "feature",
        "limit": 3,
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "feature-heading",
            "label": "Heading"
          },
           {
            "type": "text",
            "id": "feature-subtitle",
            "label": "Subtitle"
          },
          {
            "type": "color",
            "id":"heading-color",
            "label": "Heading Text",
            "default":"#fff"
          },
          {
            "type": "color",
            "id": "subtitle-color",
            "label": "Subtitle Text",
            "default":"#fff"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Feature"
      }
    ]
  }
{% endschema %}