<section>
  <div class="feature-section">
    <div class="feature-container">
      <div class="feature-flex-container row align-center row-wrap">
          {% for block in section.blocks %}
            {% if block.settings.image %}
          <div class="col-4 col-sm-12">
            <div class="row align-center mlr-10">
            <div class="image-container plr-10">
                <img src="{{ block.settings.image | img_url:'master' }}" width="35px" height="35px">
            </div>
              <div class="feature-content plr-10">
                   <span class="feature-heading">{{ block.settings.feature-heading }}</span>
                   <span class="feature-subtitle">{{ block.settings.feature-subtitle }}</span>
              </div>
            </div>
          </div>
            {% endif %}
          {% endfor %}
      </div>
      </div>
  </div>
</section>

{% style %}
.feature-section{
  background:{{section.settings.bg-color}};
}
  .row{
    display:flex;
  }
  .col-4{
    width:33.33%;
  }
