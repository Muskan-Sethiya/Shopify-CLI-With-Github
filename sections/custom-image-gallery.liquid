 <div class="image-section">
   <div class="custom-container">
   <div class="heading">
     {% if section.settings.section-heading !=blank %}
     <h2>{{section.settings.section-heading}}</h2>
       {% endif %}
   </div>

     <div class="image-grid-container">
       {% for block in section.blocks %}
         {% if block.settings.image != blank %}
       <div class="image-column p-relative" style="grid-row:span {{ block.settings.row-span }}">
         <img src="{{ block.settings.image | img_url:'master'}}" width="100%" height="100%" loading="lazy" class="p-relative">
         <div class="image-title">
             <h3>{{ block.settings.title }}</h3>
         </div>
       </div>
           {% endif %}
         {% endfor %}
     </div>
   
     </div>
 </div>  

{% style %}
  .image-grid-container {
  display: grid;
  grid-template-columns:1fr 1fr 1fr;
  gap: 10px;
  grid-auto-rows:250px;
  margin-top: 40px;
}
.image-column img {
  object-fit: cover; 
}
  .heading h2{
  color: {{section.settings.text-color}} ;
  font-weight: 600;
  font-family: sans-serif;
  font-size: 30px; 
}
{% endstyle %}


{% schema %}
  {
    "name": "Image Gallery",
    "settings": [
      {
          "type":"text",
          "id":"section-heading",
          "label": "Section Heading"
      },
      {
        "type": "color",
        "id":"text-color",
        "label": "Text",
        "default":"#0808a7"
      }
    ],
      "blocks":[
      {
        "name":"Image",
        "type":"image_picker",
        "settings":[
          {
            "type":"image_picker",
            "id":"image",
            "label":"Select Image",
          },
         {
          "type": "range",
           "id": "row-span",
          "label": "Row Span",
           "min": 1,
           "max": 5,
           "step": 1,
           "default": 1
         },
          {
            "type": "text",
            "id":"title",
            "label": "Image Title",
          }
        ]
      }
      ],
    "presets": [
      {
        "name": "Image Gallery",
      }
    ]
  }
{% endschema %}